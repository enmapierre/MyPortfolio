const { imagen = "orde2.png", descripcion } = Astro.props;
---

<div class="relative px-6 py-8">
    <div class="relative shadow-pink-200 shadow-sm p-4 rounded-lg dark: w-full">
      <!-- Mini caja en el borde derecho inferior, superponiÃ©ndola al ring -->
